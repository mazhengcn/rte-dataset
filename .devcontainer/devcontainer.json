{
    "name": "RTE Dataset",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "MathWorks.language-matlab",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "charliermarsh.ruff"
            ]
        }
    },
    "runArgs": [
        "--shm-size=512M"
    ],
    "postCreateCommand": "uv sync --dev",
    "remoteUser": "root"
}
